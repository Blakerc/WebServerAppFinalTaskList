@model TaskModel
@{
    ViewData["Title"] = "New Task";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create New Task</title>
    </head>
    <body>
        <div>
            <form asp-action="Add" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter a title"/>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input class="form-control" asp-for="Description" placeholder="Enter a description"/>
                </div>
                <div class="form-group">
                    <label asp-for="TaskDateTime">Date and Time</label>
                    <input class="form-control" asp-for="TaskDateTime" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </body>
</html>
