@model TaskModel
@{
    ViewData["Title"] = "New Task";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create New Task</title>
    </head>
    <body>
        <p>New Task input goes here.</p>
        <div>
            <form asp-action="NewTask" method="post">
                <div>
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" />
                </div>
                <div>
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" />
                </div>
                <div>
                    <label asp-for="TaskDateTime">Date and Time</label>
                    <input asp-for="TaskDateTime" />
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </body>
</html>
