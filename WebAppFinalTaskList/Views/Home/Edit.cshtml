@model TaskModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Task</title>
</head>
<body>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input class="form-control" asp-for="Title" placeholder="Enter a title"/>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input class="form-control" asp-for="Description" placeholder="Enter a description"/>
            </div>
            <div class="form-group">
                <label asp-for="TaskDateTime">Date and Time</label>
                <input class="form-control" asp-for="TaskDateTime" />
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Home" asp-action="Index"
                class="btn btn-primary">Cancel</a>
        </form>
    </div>
</body>
</html>
